<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"  
	xmlns:gap   = "http://phonegap.com/ns/1.0"
	xmlns:android   = "http://schemas.android.com/apk/res/android"
	id          = "com.ginospizza.www"
	versionCode = "1" 
	version = "4.0.1" >

	<!-- versionCode is optional and Android only -->
	<preference name="orientation" value="portrait" />
	<preference name="permissions" value="none" />
	<!--<preference name="SplashScreen" value="10000"/>-->
	<name>Ginos Pizza</name>
	<icon platform="android" src="icon.png" />
	<description>
		Online ordering available for Charleston, Elkview, Fayetteville, Hurricane, Nitro, and Summersville
	</description>
	






	
	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<!--<plugin name="cordova-plugin-splashscreen" source="npm" />-->
	<plugin name="phonegap-plugin-push" spec="~1.10.5"></plugin>

	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="StatusBarBackgroundColor" value="#000000" />
	<preference name="StatusBarStyle" value="lightcontent" />
	<preference name="SplashScreenDelay" value="0"/>
	<preference name="FadeSplashScreenDuration" value="0"/>
	<plugin spec="https://github.com/apache/cordova-plugin-statusbar.git" source="git" />

	<author href="https://folos.net/" email="support@folos.net/">
		Food Online Ordering Systems 
	</author>
	<access origin="*" />
	<!--<access origin="tel:*" launch-external="yes" />-->
	<allow-navigation href="*" />
	<allow-intent href="*" />
</widget>

